# ============================================================================
# AI Crypto Trading Bot - Backend Configuration
# MCP Server Environment Variables
# ============================================================================

# ----------------------------------------------------------------------------
# Flask Application Settings
# ----------------------------------------------------------------------------
FLASK_ENV=development
FLASK_SECRET_KEY=your-secret-key-change-in-production
JWT_SECRET_KEY=your-jwt-secret-key-change-in-production

# ----------------------------------------------------------------------------
# MCP Server Configuration
# ----------------------------------------------------------------------------
MCP_SERVER_PORT=3000
SESSION_TIMEOUT_MINUTES=30

# ----------------------------------------------------------------------------
# Database Configuration
# ----------------------------------------------------------------------------
DATABASE_PATH=trading_bot.db
BACKUP_DIR=backups
MAX_BACKUPS=30

# ----------------------------------------------------------------------------
# Authentication
# ----------------------------------------------------------------------------
# 6-digit PIN for dashboard access
BOT_CONTROL_PIN=123456

# ----------------------------------------------------------------------------
# Rate Limiting
# ----------------------------------------------------------------------------
# Default rate limits (can be overridden per endpoint)
RATE_LIMIT_PER_DAY=200
RATE_LIMIT_PER_HOUR=50

# Redis URL for distributed rate limiting (optional)
# REDIS_URL=redis://localhost:6379/0

# ----------------------------------------------------------------------------
# Security Settings
# ----------------------------------------------------------------------------
# Enable CORS (comma-separated origins)
CORS_ORIGINS=*

# Enable HTTPS in production
FORCE_HTTPS=false

# ----------------------------------------------------------------------------
# Logging Configuration
# ----------------------------------------------------------------------------
LOG_LEVEL=INFO
LOG_FORMAT=json

# ----------------------------------------------------------------------------
# External APIs (Optional - for future enhancements)
# ----------------------------------------------------------------------------
BINANCE_API_KEY=
BINANCE_SECRET_KEY=
OPENAI_API_KEY=
NEWS_API_KEY=

# ----------------------------------------------------------------------------
# Monitoring & Alerts (Optional)
# ----------------------------------------------------------------------------
# Email notifications
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
ALERT_EMAIL=

# Slack notifications
SLACK_WEBHOOK_URL=

# ----------------------------------------------------------------------------
# Backup Configuration
# ----------------------------------------------------------------------------
BACKUP_SCHEDULE_HOUR=2
BACKUP_SCHEDULE_MINUTE=0
ENABLE_AUTO_BACKUP=true
COMPRESS_BACKUPS=true

# ----------------------------------------------------------------------------
# Data Retention (in days)
# ----------------------------------------------------------------------------
SIGNALS_RETENTION_DAYS=30
CHART_ANALYSES_RETENTION_DAYS=30
BOT_STATUS_RETENTION_DAYS=7
COST_ANALYTICS_RETENTION_DAYS=90
NEWS_CACHE_RETENTION_DAYS=7

# ----------------------------------------------------------------------------
# Performance Tuning
# ----------------------------------------------------------------------------
# Database connection pool size
DB_POOL_SIZE=10

# Enable query caching
ENABLE_QUERY_CACHE=true
CACHE_TTL_SECONDS=300

# ----------------------------------------------------------------------------
# Development/Debug Settings
# ----------------------------------------------------------------------------
DEBUG_MODE=false
ENABLE_PROFILING=false
ENABLE_QUERY_LOGGING=false
