# Binance API Configuration
# Get your API keys from: https://www.binance.com/en/my/settings/api-management
# IMPORTANT: Enable "Futures" permission and set IP whitelist for security
BINANCE_API_KEY=your_binance_api_key_here
BINANCE_SECRET_KEY=your_binance_secret_key_here

# Trading Configuration
TRADING_PAIR=SUIUSDC
LEVERAGE=50
POSITION_PERCENTAGE=0.05  # 5% of available balance per trade
MIN_SIGNAL_THRESHOLD=3
INTERVAL=60  # Check interval in seconds
USE_TESTNET=true  # Set to false for live trading

# OpenAI API Configuration
# Get your API key from: https://platform.openai.com/api-keys
# Required for chart analysis with GPT-4o
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o-mini  # or gpt-4o for premium

# News API Configuration
# Get free API key from: https://newsapi.org/
# Free tier: 1000 requests/day
NEWS_API_KEY=your_newsapi_key_here

# Cost Optimization
# Set to 'true' for FREE local sentiment analysis
# Set to 'false' for premium OpenAI sentiment analysis
USE_LOCAL_SENTIMENT=true
SENTIMENT_CACHE_HOURS=24  # Cache duration: 1 for premium, 24 for cost-saving

# Web Dashboard Configuration
DASHBOARD_PORT=5000
DASHBOARD_HOST=0.0.0.0
BOT_CONTROL_PIN=123456  # 6-digit PIN for dashboard authentication

# Database Configuration
DATABASE_PATH=trading_bot.db

# Logging Configuration
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_RETENTION_DAYS=90

# Risk Management
STOP_LOSS_PERCENTAGE=0.02  # 2% stop loss
TAKE_PROFIT_PERCENTAGE=0.05  # 5% take profit
MAX_DAILY_LOSS_PERCENTAGE=0.05  # 5% max daily loss
MAX_POSITION_SIZE=0.50  # 50% max of available balance

# MCP Server Configuration
MCP_SERVER_PORT=3000
MCP_SERVER_HOST=localhost

# CrewAI Multi-Agent Configuration
# Get your API key from: https://platform.openai.com/api-keys (or Anthropic for Claude)
CREWAI_ENABLED=true
CREWAI_LLM_PROVIDER=openai  # openai or anthropic
CREWAI_LLM_MODEL=gpt-4o-mini  # gpt-4o-mini, gpt-4o, claude-3-5-sonnet
CREWAI_CONFIG_PATH=config/crewai_config.yaml

# Circuit Breaker Configuration
CIRCUIT_BREAKER_ENABLED=true  # Master switch for circuit breaker protection
CIRCUIT_BREAKER_BTC_DUMP_1H=15.0  # BTC >15% dump in 1h triggers circuit breaker
CIRCUIT_BREAKER_ETH_DUMP_1H=15.0  # ETH >15% dump in 1h triggers circuit breaker
CIRCUIT_BREAKER_AUTO_RESUME=true  # Auto-resume when market stabilizes

# Spike Detection Configuration
SPIKE_DETECTION_ENABLED=true  # Enable spike detection agent
SPIKE_DETECTION_CHECK_CIRCUIT_BREAKER=true  # Don't trade spikes during crashes

# Redis Configuration (for shared state management)
REDIS_ENABLED=false  # Set to true if using Redis for circuit breaker state
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0