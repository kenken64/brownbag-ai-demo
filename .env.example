# Binance API Configuration
# Get your API keys from: https://www.binance.com/en/my/settings/api-management
# IMPORTANT: Enable "Futures" permission and set IP whitelist for security
BINANCE_API_KEY=your_binance_api_key_here
BINANCE_SECRET_KEY=your_binance_secret_key_here

# OpenAI API Configuration
# Get your API key from: https://platform.openai.com/api-keys
# Ensure you have GPT-4o access and sufficient credits
OPENAI_API_KEY=your_openai_api_key_here

# NewsAPI Configuration (Optional)
# Get free API key from: https://newsapi.org/register
# Free tier: 1000 requests/day
NEWS_API_KEY=your_newsapi_key_here

# Trading Bot Configuration
TRADING_SYMBOL=SUIUSDC
LEVERAGE=50
POSITION_PERCENTAGE=5
STOP_LOSS_PERCENTAGE=2
TAKE_PROFIT_PERCENTAGE=3
INTERVAL=60
MINIMUM_SIGNAL_THRESHOLD=3

# Cost Optimization
# Set to 'true' for FREE local sentiment analysis (no OpenAI costs)
# Set to 'false' for premium OpenAI GPT-4o-mini sentiment analysis
USE_LOCAL_SENTIMENT=true

# Sentiment Cache Duration (in seconds)
# Premium mode: 3600 (1 hour)
# Cost-saving mode: 86400 (24 hours)
SENTIMENT_CACHE_DURATION=86400

# Web Dashboard Configuration
BOT_CONTROL_PIN=123456
DASHBOARD_PORT=5000

# Testnet Configuration
# Set to 'true' to use Binance Futures Testnet (HIGHLY RECOMMENDED for testing)
# Set to 'false' for live trading (use with caution!)
USE_TESTNET=true

# Database Configuration
DATABASE_PATH=trading_bot.db

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE_MAX_SIZE=10485760
LOG_BACKUP_COUNT=5
